<Project>
  <PropertyGroup>
    <EnableCentralPackageVersions>true</EnableCentralPackageVersions>
    <TargetFramework>native</TargetFramework>
    <RestoreAdditionalProjectSources>
      <!-- for lua dependency -->
      https://api.nuget.org/v3/index.json;       
      
      <!-- for RuntimePatchingSystem. Not required
      https://nuget.pkg.github.com/gynt/index.json;
       -->
    
    </RestoreAdditionalProjectSources>
    <_NuGetTargetFallbackMoniker>$(_NuGetTargetFallbackMoniker);native,Version=v0.0</_NuGetTargetFallbackMoniker>
  </PropertyGroup>

  <ItemGroup>
    
    <!-- The below package is required in order to export a luaopen_mymodulename function 
    <PackageReference Include="lua" Version="5.4.*" />
    -->

    <!-- However, while the below package is not strictly required, it does automatically fetch the right version of lua -->
    <PackageReference Include="UnofficialCrusaderPatch3" />
    
  </ItemGroup>
</Project>
